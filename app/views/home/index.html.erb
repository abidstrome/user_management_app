<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <% unless user_signed_in? %>
    <div class="p-8 bg-white shadow-lg rounded-lg max-w-md">
      <h1 class="text-2xl font-bold mb-4">Welcome to our User Management System</h1>
      <p class="mb-8">To manage your account, please sign in or sign up.</p>
      <%= link_to 'Sign in', new_user_session_path, class: 'inline-block w-full py-3 px-6 text-center bg-blue-600 text-white font-bold rounded-md hover:bg-blue-700 transition duration-300' %>
      <%= link_to 'Sign up', new_user_registration_path, class: 'inline-block w-full py-3 px-6 text-center bg-green-600 text-white font-bold rounded-md hover:bg-green-700 transition duration-300 mt-4' %>
    </div>
  <% end %>
</div>
